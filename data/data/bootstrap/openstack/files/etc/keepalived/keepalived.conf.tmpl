vrrp_script chk_ocp {
    # NOTE(mandre) the fake kube-api server doesn't responds to the
    # https://0:6443/readyz URL, we need to find another check
    script "ss -tnl | grep 6443"
    interval 1
    weight 50
}

# FIXME(mandre) Why isn't the VIP moving to the master nodes once the fake
# kube-api server goes down?
vrrp_instance ${CLUSTER_NAME}_API {
    state BACKUP
    interface ${INTERFACE}
    virtual_router_id ${API_VRID}
    priority 50
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass ${CLUSTER_NAME}_api_vip
    }
    virtual_ipaddress {
        ${API_VIP}/${NET_MASK}
    }
    track_script {
        chk_ocp
    }
}

